executor {
    name = 'local'
    exitReadTimeout = '5 min'
    submitRateLimit = '1/1sec'
    queueSize = 100
}

process {
    executor = 'local'

    withLabel: 'use_gpu' {
        clusterOptions = '--gres=a100:1'
    }

    withLabel: 'interproscan' {
        maxRetries = 3
    
        cpus   = { 16                    }
        memory = { 32.GB * task.attempt  }
        time   = { 24.h   * task.attempt }
    }
}
